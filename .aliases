# GoTo
alias w="cd ~/WorkSpace"
alias t="cd ~/var/tmp"
alias d="cd ~/Downloads"

# My Real Public IP
alias ifconfig.me="curl ifconfig.me"
alias myip="dig +short myip.opendns.com @resolver1.opendns.com"

# IO
alias mkdir='mkdir -vp'
alias cp='cp -v'
alias mv='mv -v'

# Git
alias g="git"

# Enable aliases to be sudo'ed
alias sudo="sudo "

# Gzip-enabled `curl`
alias gurl="curl --compressed"

# HTTP Request Methods
for method in GET HEAD POST PUT DELETE TRACE OPTIONS; do
    alias "$method"="curl -X $method"
done

# Colorize Output
alias grep="grep --color=auto"
alias egrep="egrep --color=auto"
# Detect which `ls` flavor is in use
if ls --color > /dev/null 2>&1; then # GNU `ls`
	colorflag="--color"
else # OS X `ls`
	colorflag="-G"
fi
alias ll="ls -laFh ${colorflag}"

# Stopwatch
alias timer='echo "Timer started. Stop with Ctrl-D." && date && time cat && date'

# MySQL
# --opt := --add-drop-table
#          --add-locks
#          --create-options
#          --disable-keys
#          --extended-insert
#          --lock-tables
#          --quick
#          --set-charset
# Usage:
#     Dump:
#     $ mydump -r dump.sql
#     Restore:
#     $ mysql --binary-mode --force databaseName < dump.sql
alias mydump="mysqldump --all-databases --lock-all-tables --opt --complete-insert --skip-extended-insert"
alias mydumpdata="mydump --no-create-info"
alias mydumpschema="mydump --no-data"

# Symfony
alias sf="bin/console"

# Grep Content w/o Comment Lines
alias cgrep="grep -Ev '^#'"
