[user]
	name = Mohammad Shokri
	email = shokri.md@gmail.com

[alias]
	# Status
	s = status -s
	st = status

	# Commit
	ci = commit

	# Branch
	br = branch
	b = branch -av

	# CheckOut
	co = checkout

	# Diff
	df = diff
	dc = diff --cached

	# Log
	l = log --pretty=format:'%h %s [%an]' --graph
	lol = log --graph --decorate --pretty=oneline --abbrev-commit --all
	last = log -1 HEAD

	# List
	ls = ls-files

	# Show files ignored by git:
	ign = ls-files -o -i --exclude-standard

	# Tags
	t = tag -l

	# Remotes
	r = remote -v

	# Stage
	unstage = reset HEAD --

	# SubModules
	pushall = push --recurse-submodules=on-demand

[core]
	# Use custom GitIgnore
	excludesfile = ~/.gitignore

	# Set ATOM as Default Editor
	editor = "atom --wait"

	# Compression Level
	compression = 9

	# Ignore X-Bit Difference
	fileMode = false

	# Linux/Mac Compatible Line Endings
	autocrlf = input

[color]
	# Colorize Output when Possible
	ui = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow
	frag = magenta
	old = red
	new = green
	whitespace = red reverse

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[credential]
	# Cache Credentials for 12 Hours
	helper = cache --timeout 43200

[merge]
	# Meld Diff Tool
	tool = meld

[push]
  # Limit Pushes to Current Branch
	default = simple

[branch]
  # Fetch & ReBase, not Merge
  autosetuprebase = always
