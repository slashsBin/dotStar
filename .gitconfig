[alias]
	# Pretty OneLine Log
	l = log --oneline --graph
	
	# Short Status
	s = status -s
	
	# Branches/Tags/Remotes
	b = branch -a
	t = tag -l
	r = remote -v

	# Commit
	cm = commit -m

[core]
	# Use custom GitIgnore
	excludesfile = ~/.gitignore
	
	# Set ViM as Default Editor
	editor = vim

[color]
	# Colorize Output when Possible
	ui = true
	status = auto
	branch = auto

[credential]
	# Cache Credentials for 12 Hours
	helper = cache --timeout 43200

[merge]
	# Meld Diff Tool
	tool = meld
